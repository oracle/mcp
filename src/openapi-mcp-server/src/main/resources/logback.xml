<configuration>
    <property name="LOG_PATH" value="${LOG_PATH:-${java.io.tmpdir}}"/>

    <!-- Console appender for JSON-RPC (io.modelcontextprotocol) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender for all other logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH:-${java.io.tmpdir}}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- io.modelcontextprotocol logs go only to console -->
    <logger name="io.modelcontextprotocol" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- All other logs go only to rolling file -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
